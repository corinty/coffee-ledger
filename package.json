{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "prebuild": "npx prisma migrate deploy && npx prisma generate",
    "prestart": "npm run build",
    "start": "remix-serve ./build",
    "socket": "PORT=3002 nodemon --esm --swc socket.server.ts",
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  },
  "dependencies": {
    "@date-io/date-fns": "^2.14.0",
    "@emotion/react": "^11.9.0",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.8.1",
    "@mui/x-data-grid": "^5.12.0",
    "@mui/x-date-pickers": "^5.0.0-alpha.4",
    "@prisma/client": "^4.3.1",
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "@remix-run/serve": "^1.5.1",
    "@remix-run/server-runtime": "^1.5.1",
    "@remix-run/vercel": "^1.6.4",
    "@remix-validated-form/with-zod": "^2.0.1",
    "@swc/core": "^1.3.1",
    "@vercel/node": "^1.8.3",
    "bcryptjs": "^2.4.3",
    "daisyui": "^2.46.1",
    "date-fns": "^2.28.0",
    "express": "^4.18.1",
    "node-fetch": "^3.2.10",
    "node-html-to-image": "^3.2.4",
    "puppeteer": "^17.1.3",
    "random-word-slugs": "^0.1.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix-validated-form": "^4.5.0",
    "socket.io": "^4.5.2",
    "socket.io-client": "^4.5.2",
    "socket.io-react-hook": "^1.0.17",
    "tiny-invariant": "^1.2.0",
    "zod": "^3.17.3",
    "zod-form-data": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "@remix-run/serve": "^1.5.1",
    "@tailwindcss/typography": "^0.5.8",
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^18.0.3",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "eslint": "^8.15.0",
    "nodemon": "^2.0.19",
    "postcss": "^8.4.20",
    "prisma": "^4.3.1",
    "tailwindcss": "^3.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  }
}
